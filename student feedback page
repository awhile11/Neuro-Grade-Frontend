  <script>
    // Mobile menu toggle functionality
    const menuToggle = document.getElementById('menu-toggle');
    const sidebar = document.getElementById('sidebar');
    
    menuToggle.addEventListener('click', () => {
      sidebar.classList.toggle('active');
    });
    
    // Close sidebar when clicking outside on mobile
    document.addEventListener('click', (event) => {
      if (window.innerWidth < 992 && 
          !sidebar.contains(event.target) && 
          !menuToggle.contains(event.target) &&
          sidebar.classList.contains('active')) {
        sidebar.classList.remove('active');
      }
    });

    // Navigation functionality
    const dashboard = document.getElementById('dashboard');
    const examDetails = document.getElementById('exam-details');
    const assignmentDetails = document.getElementById('assignment-details');
    const examsBtn = document.getElementById('exams-btn');
    const assignmentsBtn = document.getElementById('assignments-btn');
    const examsOverview = document.getElementById('exams-overview');
    const assignmentsOverview = document.getElementById('assignments-overview');
    const backFromExams = document.getElementById('back-from-exams');
    const backFromAssignments = document.getElementById('back-from-assignments');
    const examSubjectsContainer = document.getElementById('exam-subjects');
    const assignmentSubjectsContainer = document.getElementById('assignment-subjects');

    // Simulated database data (replace with actual API calls to your database)
    const examData = [
      { name: "Mathematics", code: "MATH101", term: "Spring 2023", score: 72 },
      { name: "Computer Science", code: "CS205", term: "Spring 2023", score: 85 },
      { name: "Physics", code: "PHYS150", term: "Spring 2023", score: 68 },
      { name: "English Literature", code: "ENGL120", term: "Spring 2023", score: 63 },
      { name: "History", code: "HIST110", term: "Spring 2023", score: 77 },
      { name: "Chemistry", code: "CHEM180", term: "Spring 2023", score: 59 }
    ];

    const assignmentData = [
      { name: "Mathematics", code: "MATH101", count: 8, score: 92 },
      { name: "Computer Science", code: "CS205", count: 12, score: 88 },
      { name: "Physics", code: "PHYS150", count: 6, score: 79 },
      { name: "English Literature", code: "ENGL120", count: 5, score: 95 },
      { name: "History", code: "HIST110", count: 7, score: 86 },
      { name: "Chemistry", code: "CHEM180", count: 9, score: 83 }
    ];

    // Function to render exam subjects
    function renderExamSubjects() {
      examSubjectsContainer.innerHTML = '';
      
      if (examData.length === 0) {
        examSubjectsContainer.innerHTML = '<div class="loading">No exam data available</div>';
        return;
      }
      
      examData.forEach(subject => {
        const subjectCard = document.createElement('div');
        subjectCard.className = 'subject-card';
        subjectCard.innerHTML = `
          <div class="subject-name">${subject.name}</div>
          <div class="subject-meta">
            <span>Code: ${subject.code}</span>
            <span>Term: ${subject.term}</span>
          </div>
          <div class="subject-score">${subject.score}%</div>
          <div class="score-bar">
            <div class="score-progress" style="width: ${subject.score}%"></div>
          </div>
          <div class="score-label">
            <span>0%</span>
            <span>100%</span>
          </div>
        `;
        examSubjectsContainer.appendChild(subjectCard);
      });
    }

    // Function to render assignment subjects
    function renderAssignmentSubjects() {
      assignmentSubjectsContainer.innerHTML = '';
      
      if (assignmentData.length === 0) {
        assignmentSubjectsContainer.innerHTML = '<div class="loading">No assignment data available</div>';
        return;
      }
      
      assignmentData.forEach(subject => {
        const subjectCard = document.createElement('div');
        subjectCard.className = 'subject-card';
        subjectCard.innerHTML = `
          <div class="subject-name">${subject.name}</div>
          <div class="subject-meta">
            <span>Code: ${subject.code}</span>
            <span>Assignments: ${subject.count}</span>
          </div>
          <div class="subject-score">${subject.score}%</div>
          <div class="score-bar">
            <div class="score-progress" style="width: ${subject.score}%"></div>
          </div>
          <div class="score-label">
            <span>0%</span>
            <span>100%</span>
          </div>
        `;
        assignmentSubjectsContainer.appendChild(subjectCard);
      });
    }

    // Show exam details
    function showExamDetails() {
      dashboard.style.display = 'none';
      examDetails.classList.add('active');
      assignmentDetails.classList.remove('active');
      renderExamSubjects();
    }

    // Show assignment details
    function showAssignmentDetails() {
      dashboard.style.display = 'none';
      assignmentDetails.classList.add('active');
      examDetails.classList.remove('active');
      renderAssignmentSubjects();
    }

    // Back to overview
    function backToOverview() {
      dashboard.style.display = 'grid';
      examDetails.classList.remove('active');
      assignmentDetails.classList.remove('active');
    }

    // Event listeners
    examsBtn.addEventListener('click', showExamDetails);
    assignmentsBtn.addEventListener('click', showAssignmentDetails);
    examsOverview.addEventListener('click', showExamDetails);
    assignmentsOverview.addEventListener('click', showAssignmentDetails);
    backFromExams.addEventListener('click', backToOverview);
    backFromAssignments.addEventListener('click', backToOverview);

    // Initialize the page
    renderExamSubjects();
    renderAssignmentSubjects();
  </script>

</body>
</html>
