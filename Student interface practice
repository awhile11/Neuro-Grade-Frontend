<!-- Main Content -->
<div class="main">
  <!-- Practice Tasks Section -->
  <div id="practice-section" style="display: block;">
    <h2>Practice Tasks</h2>
    <div class="cards-container" id="practice-cards">
      <!-- Practice cards will be injected here -->
    </div>
  </div>
  
  <!-- Practice Detail View -->
  <div id="practice-detail" style="display: none;">
    <button class="btn" onclick="backToPractice()">Back</button>
    <div id="task-details-container">
      <!-- Task details will be injected here -->
    </div>
  </div>
</div>

<script>
  // Data for practice tasks
  const practiceTasks = [
    { code: 'MATH511', title: 'JUNE EXAM 2019', progress: '78%' },
    { code: 'HCI721', title: 'NOVEMBER EXAM 2019', progress: null },
    { code: 'PRO712', title: 'JUNE EXAM 2020', progress: '89%' },
    { code: 'SS443', title: 'NOVEMBER EXAM 2020', progress: null }
  ];

  // Function to generate practice cards
  function loadPracticeCards() {
    const container = document.getElementById('practice-cards');
    container.innerHTML = '';
    practiceTasks.forEach((task, index) => {
      const card = document.createElement('div');
      card.className = 'card';

      const title = document.createElement('h3');
      title.innerText = task.code;

      const btn = document.createElement('button');
      btn.className = 'view-btn';
      btn.innerText = 'view';
      btn.onclick = () => showTaskDetails(task);

      card.appendChild(title);
      card.appendChild(btn);

      container.appendChild(card);
    });
  }

  // Show task details
  function showTaskDetails(task) {
    document.getElementById('practice-section').style.display = 'none';
    document.getElementById('practice-detail').style.display = 'block';

    const container = document.getElementById('task-details-container');
    container.innerHTML = '';

    // Example details based on task
    const taskCard = document.createElement('div');
    taskCard.className = 'task-card';

    const taskTitle = document.createElement('h4');
    taskTitle.innerText = task.code;

    const info = document.createElement('p');
    info.innerText = `${task.title} (${task.code})`;

    const buttonsDiv = document.createElement('div');
    buttonsDiv.className = 'buttons';

    const retryBtn = document.createElement('button');
    retryBtn.className = 'btn';
    retryBtn.innerText = 'retry attempt';
    retryBtn.onclick = () => alert('Retry attempt clicked!');

    const startBtn = document.createElement('button');
    startBtn.className = 'btn';
    startBtn.innerText = 'start attempt';
    startBtn.onclick = () => alert('Start attempt clicked!');

    buttonsDiv.appendChild(retryBtn);
    buttonsDiv.appendChild(startBtn);

    taskCard.appendChild(taskTitle);
    taskCard.appendChild(info);
    taskCard.appendChild(buttonsDiv);

    container.appendChild(taskCard);
  }

  // Back to practice list
  function backToPractice() {
    document.getElementById('practice-section').style.display = 'block';
    document.getElementById('practice-detail').style.display = 'none';
  }

  // Sidebar navigation
  function showSection(section) {
    // For simplicity, only Practice section is functional here
    // You can expand this to handle other sections
    alert(`Navigate to ${section}`);
  }

  // Initialize
  loadPracticeCards();
</script>
</body>
</html>
