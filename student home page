  <script>
    // Menu interactivity
    const menuToggle = document.getElementById('menu-toggle');
    const sidebar = document.getElementById('sidebar');
    const navButtons = document.querySelectorAll(".nav button");

    // Toggle sidebar on mobile
    menuToggle.addEventListener('click', () => {
      sidebar.classList.toggle('active');
    });

    // Sidebar active highlight
    navButtons.forEach(btn => {
      btn.addEventListener('click', (e) => {
        e.preventDefault();
        
        // Remove active class from all buttons
        navButtons.forEach(b => b.classList.remove('active'));
        
        // Add active class to clicked button
        btn.classList.add('active');
        
        // Get the page name from data attribute
        const page = btn.getAttribute('data-page');
        
        // Here you would typically load the appropriate page content
        console.log(`Loading page: ${page}`);
        
        // Close sidebar on mobile after selection
        if (window.innerWidth <= 992) {
          sidebar.classList.remove('active');
        }
      });
    });

    // Chart.js Line Chart
    const ctx = document.getElementById('performanceChart').getContext('2d');
    new Chart(ctx, {
      type: 'line',
      data: {
        labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul'],
        datasets: [{
          label: 'Performance',
          data: [50, 65, 70, 55, 60, 80, 95],
          borderColor: '#3a86ff',
          backgroundColor: 'rgba(58, 134, 255, 0.1)',
          tension: 0.4,
          fill: true,
          pointBackgroundColor: '#3a86ff'
        }]
      },
      options: {
        responsive: true,
        plugins: { 
          legend: { display: false },
          tooltip: {
            backgroundColor: 'rgba(0, 0, 0, 0.7)',
            titleFont: { size: 14 },
            bodyFont: { size: 14 },
            padding: 10
          }
        },
        scales: { 
          y: { 
            beginAtZero: true, 
            max: 100,
            grid: {
              color: 'rgba(0, 0, 0, 0.05)'
            }
          },
          x: {
            grid: {
              color: 'rgba(0, 0, 0, 0.05)'
            }
          }
        }
      }
    });

    // Add hover effects to cards
    document.querySelectorAll('.average-card, .subjects-card, .right-col').forEach(card => {
      card.addEventListener('mouseenter', () => {
        card.style.transform = 'translateY(-5px)';
        card.style.boxShadow = '0 8px 16px rgba(0,0,0,0.1)';
      });
      
      card.addEventListener('mouseleave', () => {
        card.style.transform = 'translateY(0)';
        card.style.boxShadow = '0 2px 8px rgba(0,0,0,0.08)';
      });
    });

    // Add click functionality to buttons
    document.querySelectorAll('.subject-actions button, .assignment-actions button').forEach(button => {
      button.addEventListener('click', () => {
        // Add your navigation logic here
        alert('This would navigate to the detailed view');
      });
    });

    // Initialize the dashboard with data
    document.addEventListener('DOMContentLoaded', () => {
      // You can add initialization logic here
      console.log('Student dashboard loaded');
    });
  </script>
